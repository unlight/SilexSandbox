        "doctrine/orm": "2.3.x-dev",
        "minmb/phpmailer": "dev-master",
        "gabordemooij/redbean": "dev-master",
        "vrana/notorm": "dev-master",
        "pagerfanta/pagerfanta": "dev-master",
        "soup/paginator": "dev-master",
